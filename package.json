{
  "name": "artisans-tailwind-css",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:tailwind": "tailwindcss -i ./assets/style/input.css -o ./assets/style/output.css --watch",
    "dev:server": "vite",
    "build": "tailwindcss -i ./assets/style/input.css -o ./assets/style/output.css --minify",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.0.0",
    "vite": "^5.4.21"
  }
}

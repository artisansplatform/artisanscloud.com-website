{
  "name": "artisans-tailwind-css",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:tailwind": "tailwindcss -i ./assets/style/input.css -o ./assets/style/output.css --watch",
    "dev:server": "vite",
    "build": "npm-run-all build:*",
    "build:css": "tailwindcss -i ./assets/style/input.css -o ./assets/style/output.css --minify",
    "build:html": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:build": "npm run build && vitest run tests/build.test.js",
    "test:links": "vitest run tests/links.test.js"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "glob": "^13.0.0",
    "jsdom": "^27.4.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.0.0",
    "vite": "^5.4.21",
    "vite-plugin-handlebars": "^2.0.0",
    "vitest": "^4.0.18"
  }
}
